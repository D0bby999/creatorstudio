# ─── Production Environment Template ───
# Copy values to Vercel/Railway/Docker env vars
# DO NOT put real secrets in this file!

# ─── Database Configuration ───
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"
DIRECT_DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.compute.supabase.com:5432/postgres"

# ─── Redis Configuration ───
UPSTASH_REDIS_REST_URL="https://[endpoint].upstash.io"
UPSTASH_REDIS_REST_TOKEN="[token]"

# ─── Authentication ───
BETTER_AUTH_URL="https://creatorstudio.app"
BETTER_AUTH_SECRET="[generate-with-openssl-rand-hex-32]"

# ─── Email Service ───
RESEND_API_KEY="re_[production-key]"
RESEND_FROM_EMAIL="noreply@creatorstudio.app"

# ─── OAuth Providers ───
GOOGLE_CLIENT_ID="[prod-client-id].apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="[prod-secret]"
GITHUB_CLIENT_ID="[prod-client-id]"
GITHUB_CLIENT_SECRET="[prod-secret]"

# ─── AI Providers ───
OPENAI_API_KEY="sk-[production-key]"
ANTHROPIC_API_KEY="sk-ant-[production-key]"
GOOGLE_GENERATIVE_AI_API_KEY="AIzaSy[production-key]"
REPLICATE_API_TOKEN="r8_[production-token]"

# ─── Social Platform APIs ───
TOKEN_ENCRYPTION_KEY="[generate-with-openssl-rand-hex-32]"
META_APP_ID="[production-app-id]"
META_APP_SECRET="[production-secret]"
TIKTOK_CLIENT_KEY="[production-key]"
TIKTOK_CLIENT_SECRET="[production-secret]"

# ─── Storage (Cloudflare R2) ───
R2_ACCOUNT_ID="[account-id]"
R2_ACCESS_KEY_ID="[access-key]"
R2_SECRET_ACCESS_KEY="[secret-key]"
R2_BUCKET_NAME="creator-studio-prod"
R2_PUBLIC_URL="https://cdn.creatorstudio.app"

# ─── Background Jobs (Inngest) ───
INNGEST_EVENT_KEY="[production-event-key]"
INNGEST_SIGNING_KEY="[production-signing-key]"

# ─── Web Scraping ───
BROWSERLESS_API_URL="wss://chrome.browserless.io"
BROWSERLESS_API_TOKEN="[production-token]"

# ─── Video Export (Remotion Lambda) ───
REMOTION_REGION="us-east-1"
REMOTION_FUNCTION_NAME="remotion-render-[stack]"
REMOTION_SERVE_URL="https://[s3-bucket].s3.amazonaws.com/remotion/"

# ─── Monitoring ───
SENTRY_DSN="https://[key]@sentry.io/[project]"
VITE_SENTRY_DSN="https://[key]@sentry.io/[project]"

# ─── Application Settings ───
APP_URL="https://creatorstudio.app"
NODE_ENV="production"
LOG_LEVEL="info"
