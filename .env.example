# ─── Database Configuration ───
# Local Development (docker-compose)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/creator_studio"

# Vercel/Production (Supabase with Supavisor pooling)
# DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"
# DIRECT_DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.compute.supabase.com:5432/postgres"

# Docker Self-Host (internal service name)
# DATABASE_URL="postgresql://postgres:postgres@postgres:5432/creator_studio"

# ─── Redis Configuration ───
# Local Development (docker-compose or local Redis)
REDIS_URL="redis://localhost:6379"

# Vercel/Production (Upstash Redis)
# UPSTASH_REDIS_REST_URL="https://[endpoint].upstash.io"
# UPSTASH_REDIS_REST_TOKEN="[token]"

# Docker Self-Host (internal service name)
# REDIS_URL="redis://redis:6379"

# ─── Authentication (Required) ───
BETTER_AUTH_URL="http://localhost:5173"
BETTER_AUTH_SECRET="change-me-to-a-random-secret-at-least-32-chars"

# ─── OAuth Providers (Optional) ───
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ─── Media Storage (Optional) ───
# Cloudinary (Legacy)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Cloudflare R2 (Recommended for video/images - zero egress cost)
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
R2_PUBLIC_URL=""  # Optional: custom domain, defaults to *.r2.dev

# ─── AI Tools (Optional) ───
OPENAI_API_KEY=""

# ─── Browserless Crawler (Optional) ───
# For JS-rendered sites. Fallback to cheerio if not configured.
BROWSERLESS_API_URL="wss://chrome.browserless.io"
BROWSERLESS_API_TOKEN=""

# ─── Monitoring (Optional) ───
SENTRY_DSN=""  # Server-side Sentry DSN
VITE_SENTRY_DSN=""  # Client-side Sentry DSN (can be same as SENTRY_DSN)
SENTRY_AUTH_TOKEN=""  # For uploading source maps (CI/CD only)

# ─── Background Jobs (Optional) ───
INNGEST_EVENT_KEY=""
INNGEST_SIGNING_KEY=""

# ─── Video Export (Remotion Lambda - Optional) ───
# AWS/Remotion Lambda configuration for server-side video rendering
REMOTION_REGION="us-east-1"
REMOTION_FUNCTION_NAME=""  # Remotion Lambda function name
REMOTION_SERVE_URL=""      # URL where Remotion bundle is hosted

# ─── Production Settings (Docker only) ───
# POSTGRES_DB=creator_studio
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD="change-me-to-strong-password"

# ─── CI/CD & Deployment (Optional) ───
VERCEL_TOKEN=""  # GitHub Actions deployment
VERCEL_ORG_ID=""  # Vercel organization ID
VERCEL_PROJECT_ID=""  # Vercel project ID
SKIP_ENV_VALIDATION=""  # Set to "true" in CI to skip env validation

# ─── Application Settings ───
NODE_ENV="development"
