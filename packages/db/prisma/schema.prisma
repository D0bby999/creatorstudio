generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// ─── Better Auth tables ───

model User {
  id             String          @id
  name           String
  email          String
  emailVerified  Boolean         @default(false)
  image          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  sessions            Session[]
  accounts            Account[]
  projects            Project[]
  socialAccounts      SocialAccount[]
  crawlJobs           CrawlJob[]
  aiSessions          AiSession[]
  organizationMembers OrganizationMember[]
  webhookEndpoints    WebhookEndpoint[]
  plugins             Plugin[]
  apiKeys             ApiKey[]
  mediaFiles          MediaFile[]
  videoExports        VideoExport[]
  pluginReviews       PluginReview[]
  pluginInstalls      PluginInstall[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ─── Application tables ───

model Project {
  id        String   @id @default(cuid())
  name      String
  type      String   // canvas | video
  data      Json?
  thumbnail String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("project")
}

model SocialAccount {
  id             String       @id @default(cuid())
  platform       String       // instagram | facebook | threads | tiktok | bluesky | twitter | linkedin
  platformUserId String
  username       String
  accessToken    String
  refreshToken   String?
  expiresAt      DateTime?
  metadata       Json?        // Platform-specific data (pageId, pageAccessToken, openId, etc.)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts          SocialPost[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([userId, platform, platformUserId])
  @@index([userId])
  @@map("social_account")
}

model SocialPost {
  id             String          @id @default(cuid())
  content        String
  mediaUrls      String[]
  platform       String          // instagram
  scheduledAt    DateTime?
  publishedAt    DateTime?
  status         String          // draft | scheduled | publishing | published | failed
  platformPostId String?
  socialAccountId String
  socialAccount  SocialAccount   @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)
  analytics      PostAnalytics?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([socialAccountId])
  @@index([status])
  @@index([scheduledAt])
  @@map("social_post")
}

model PostAnalytics {
  id             String     @id @default(cuid())
  postId         String     @unique
  post           SocialPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  impressions    Int        @default(0)
  reach          Int        @default(0)
  likes          Int        @default(0)
  comments       Int        @default(0)
  shares         Int        @default(0)
  saves          Int        @default(0)
  engagementRate Float      @default(0)
  fetchedAt      DateTime   @default(now())
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@index([postId])
  @@map("post_analytics")
}

// ─── Crawler tables ───

model CrawlJob {
  id          String   @id @default(cuid())
  url         String
  type        String   // url | seo
  status      String   @default("pending") // pending | running | completed | failed
  result      Json?
  error       String?
  priority    Int      @default(0)
  retryCount  Int      @default(0)
  maxRetries  Int      @default(3)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  completedAt DateTime?

  @@index([userId])
  @@index([status])
  @@map("crawl_job")
}

// ─── AI tables ───

model AiSession {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  agentRole  String
  messages   Json     @default("[]")
  tokenCount Int      @default(0)
  title      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@map("ai_session")
}

// ─── Organization tables ───

model Organization {
  id        String               @id @default(cuid())
  name      String
  slug      String               @unique
  members   OrganizationMember[]
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@map("organization")
}

model OrganizationMember {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           String       @default("member") // owner | admin | member
  createdAt      DateTime     @default(now())

  @@unique([userId, organizationId])
  @@index([organizationId])
  @@map("organization_member")
}

// ─── Webhook tables ───

model WebhookEndpoint {
  id             String         @id @default(cuid())
  url            String
  secret         String
  events         String[]
  enabled        Boolean        @default(true)
  organizationId String?
  userId         String
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  webhookEvents  WebhookEvent[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([userId])
  @@index([organizationId])
  @@map("webhook_endpoint")
}

model WebhookEvent {
  id          String          @id @default(cuid())
  endpointId  String
  endpoint    WebhookEndpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade)
  eventType   String
  payload     Json
  signature   String
  status      String          @default("pending")
  attempts    Int             @default(0)
  maxAttempts Int             @default(3)
  lastError   String?
  deliveredAt DateTime?
  createdAt   DateTime        @default(now())
  nextRetryAt DateTime?

  @@index([endpointId])
  @@index([status])
  @@index([nextRetryAt])
  @@map("webhook_event")
}

// ─── Plugin tables ───

model Plugin {
  id             String          @id @default(cuid())
  name           String
  version        String          @default("1.0.0")
  enabled        Boolean         @default(false)
  config         Json?
  organizationId String?
  userId         String?
  user           User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  installedAt    DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  displayName    String          @default("")
  description    String          @default("")
  author         String          @default("")
  iconUrl        String?
  manifest       Json?
  sourceUrl      String?
  status         String          @default("pending")
  installCount   Int             @default(0)
  categoryId     String?
  category       PluginCategory? @relation(fields: [categoryId], references: [id])
  avgRating      Float           @default(0)
  featured       Boolean         @default(false)
  tags           String[]

  @@unique([name, organizationId])
  @@unique([name, userId])
  @@index([organizationId])
  @@index([userId])
  @@index([status])
  @@index([categoryId])
  @@map("plugin")
}

model PluginCategory {
  id      String   @id @default(cuid())
  slug    String   @unique
  name    String
  icon    String?
  plugins Plugin[]

  @@map("plugin_category")
}

model PluginReview {
  id        String   @id @default(cuid())
  pluginId  String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([pluginId, userId])
  @@index([pluginId])
  @@map("plugin_review")
}

model PluginInstall {
  id            String    @id @default(cuid())
  pluginId      String
  userId        String
  installedAt   DateTime  @default(now())
  uninstalledAt DateTime?
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([pluginId, userId])
  @@index([pluginId])
  @@index([userId])
  @@map("plugin_install")
}

// ─── API Key tables ───

model ApiKey {
  id             String    @id @default(cuid())
  key            String    @unique
  name           String
  lastUsedAt     DateTime?
  rateLimit      Int       @default(10)
  scopes         String[]  @default(["posts:read", "posts:write", "images:read"])
  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationId String?
  enabled        Boolean   @default(true)
  createdAt      DateTime  @default(now())
  expiresAt      DateTime?

  @@index([userId])
  @@index([key])
  @@map("api_key")
}

// ─── Media Storage tables ───

model MediaFile {
  id          String   @id @default(cuid())
  key         String   @unique
  filename    String
  contentType String
  size        Int
  url         String
  type        String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([type])
  @@map("media_file")
}

// ─── Video Export tables ───

model VideoExport {
  id          String   @id @default(cuid())
  projectId   String
  userId      String
  status      String   @default("queued")
  format      String   @default("mp4")
  progress    Float    @default(0)
  renderId    String?
  outputUrl   String?
  fileSize    Int?
  duration    Float?
  error       String?
  createdAt   DateTime @default(now())
  completedAt DateTime?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([projectId])
  @@index([status])
  @@map("video_export")
}
